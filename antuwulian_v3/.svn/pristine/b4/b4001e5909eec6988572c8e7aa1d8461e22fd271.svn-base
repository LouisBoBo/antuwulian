<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F4F4F4">

    <include layout="@layout/include_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/color_FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12">

            <com.slxk.gpsantu.mvp.ui.view.ClearEditText
                android:id="@+id/edt_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_44"
                android:background="@color/transparent"
                android:textSize="@dimen/sp_14"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:hint="@string/txt_input_code"/>

            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_12"
                android:background="@drawable/bg_00b4b7_15"
                android:textSize="@dimen/sp_11"
                android:gravity="center"
                android:textColor="@color/color_2E7BEC"
                android:text="@string/txt_get_code"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@color/color_E5E5E5"/>

        <com.slxk.gpsantu.mvp.ui.view.ClearEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/transparent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:textSize="@dimen/sp_13"
            android:inputType="textPassword"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM._"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:hint="@string/txt_input_new_password"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@color/color_E5E5E5"/>

        <com.slxk.gpsantu.mvp.ui.view.ClearEditText
            android:id="@+id/edt_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/transparent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:textSize="@dimen/sp_13"
            android:inputType="textPassword"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM._"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:hint="@string/txt_input_new_password_confirm"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/bg_2e7bec_5"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_FFFFFF"
        android:text="@string/txt_confirm"/>

</LinearLayout>