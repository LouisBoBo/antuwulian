@ActivityScope
public class AlarmScreenPresenter extends BasePresenter<AlarmScreenContract.Model, AlarmScreenContract.View> {
    @Inject
    RxErrorHandler mErrorHandler;
    @Inject
    Application mApplication;
    @Inject
    ImageLoader mImageLoader;
    @Inject
    AppManager mAppManager;

    @Inject
    public AlarmScreenPresenter(AlarmScreenContract.Model model, AlarmScreenContract.View rootView) {
        super(model, rootView);
    }

    public void getAlarmScreenType(AlarmScreenTypePutBean bean){
        mModel.getAlarmScreenType(bean)
                .subscribeOn(Schedulers.io())
                .doOnSubscribe(disposable -> {
                    mRootView.showLoading();
                }).subscribeOn(AndroidSchedulers.mainThread())
                .observeOn(AndroidSchedulers.mainThread())
                .doFinally(() -> {
                    mRootView.hideLoading();
                })
                .compose(RxLifecycleUtils.bindToLifecycle(mRootView))
                .subscribe(new ErrorHandleSubscriber<AlarmScreenBean>(mErrorHandler) {
                    @Override
                    public void onNext(AlarmScreenBean alarmScreenBean) {
                        if (alarmScreenBean.isSuccess()){
                            mRootView.getAlarmScreenTypeSuccess(alarmScreenBean);
                        }
                    }
                });
    }


    @Override
    public void onDestroy() {
        super.onDestroy();
        this.mErrorHandler = null;
        this.mAppManager = null;
        this.mImageLoader = null;
        this.mApplication = null;
    }
}
