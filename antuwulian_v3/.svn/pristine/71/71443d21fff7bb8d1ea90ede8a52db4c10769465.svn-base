<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F4F4F4"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="@string/txt_phone_bind_tip"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_22" />

    <LinearLayout
        android:id="@+id/ll_mobile_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/color_FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_75"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/txt_mobile_code"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_14"
            android:layout_gravity="center_vertical"
            android:background="@color/color_CECECE" />

        <com.slxk.gpsantu.mvp.ui.view.ClearEditText
            android:id="@+id/edt_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="@string/txt_input_code"
            android:inputType="number"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_00b4b7_12"
            android:gravity="center"
            android:text="@string/txt_get_code"
            android:textColor="@color/color_2E7BEC"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/bg_2e7bec_5"
        android:gravity="center"
        android:text="@string/txt_bind_submit"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/sp_16" />

</LinearLayout>