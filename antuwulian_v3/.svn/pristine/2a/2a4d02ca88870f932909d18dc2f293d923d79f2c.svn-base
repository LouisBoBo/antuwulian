<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:clickable="true"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_15"
        android:layout_gravity="center_horizontal">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_device_up_bg"/>
        
        <ImageView
            android:id="@+id/iv_device_down"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerInParent="true"
            android:src="@drawable/device_list_chevron_down"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_00b4b7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_device_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_FFFFFF"
            android:text="@string/txt_all"
            android:gravity="center"
            android:background="@drawable/bg_2eb6b9"
            tools:ignore="NestedWeights" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_2E7BEC"/>

        <TextView
            android:id="@+id/tv_device_line_on"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_4A89FD"
            android:text="@string/txt_state_line_on"
            android:gravity="center"
            tools:ignore="NestedWeights"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_2E7BEC"/>

        <TextView
            android:id="@+id/tv_device_line_static"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_4A89FD"
            android:text="@string/txt_state_line_static"
            android:gravity="center"
            tools:ignore="NestedWeights"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_2E7BEC"/>

        <TextView
            android:id="@+id/tv_device_line_down"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_4A89FD"
            android:text="@string/txt_state_line_down"
            android:gravity="center"
            tools:ignore="NestedWeights"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_FFFFFF"/>

</LinearLayout>