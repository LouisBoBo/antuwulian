<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_E5E5E5"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_15"
        android:divider="@color/color_E5E5E5"
        android:dividerHeight="1px"
        android:listSelector="@color/transparent" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/bg_2e7bec_5"
        android:text="@string/txt_add_more"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_15"
        android:textSize="@dimen/sp_12"
        android:gravity="center|start"
        android:textColor="@color/color_FF2424"
        android:text="@string/txt_remote_listener"
        android:padding="@dimen/dp_2"
        android:background="@drawable/bg_f4f4f4_3"/>


</LinearLayout>