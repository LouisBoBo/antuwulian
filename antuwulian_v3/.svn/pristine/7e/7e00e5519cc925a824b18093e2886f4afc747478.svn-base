<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/hint_liebiao"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/hint_img" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toStartOf="@+id/hint_liebiao"
            android:src="@drawable/icon_polygon" />

        <ImageView
            android:id="@+id/hint_2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@+id/hint_liebiao"
            android:src="@drawable/icon_polygon" />

        <ImageView
            android:id="@+id/hint_img"
            android:layout_width="19dp"
            android:layout_height="64dp"
            android:layout_below="@+id/hint_liebiao"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/hint_line_xiaotiao" />

        <TextView
            android:id="@+id/hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hint_img"
            android:gravity="center"
            android:lineSpacingExtra="12dp"
            android:text="@string/txt_guide_hint_5"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_know"
        android:layout_width="181dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/hint_tv_know"
        android:visibility="gone" />

</RelativeLayout>