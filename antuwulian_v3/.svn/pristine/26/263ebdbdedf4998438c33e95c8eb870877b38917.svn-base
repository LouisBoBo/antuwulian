<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFF">

    <TextView
        android:id="@+id/tv_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/txt_location_mode_1_yi"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_mode"
        android:text=""
        android:textColor="@color/color_2E7BEC"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mode"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_toStartOf="@+id/iv_select"
        android:text="@string/txt_location_mode_1_yi_hint"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_13" />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:padding="@dimen/dp_10"
        android:src="@drawable/icon_unselect_big" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_des"
        android:background="@color/color_E5E5E5" />

</RelativeLayout>