<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F5F5F5"
    android:orientation="horizontal"
    android:layout_marginStart="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/dp_29"
        android:layout_height="@dimen/dp_29"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/dp_5"
        android:src="@drawable/icon_unselected_small"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_4"
        android:background="@drawable/bg_ffffff_10"
        android:elevation="@dimen/dp_1">

        <TextView
            android:id="@+id/tv_device_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:text="@string/txt_device_name"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dp_10"
            android:text=" 2019-11-13 09:27:14"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_p1"
            android:layout_below="@+id/tv_device_number"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@color/color_E5E5E5" />

        <LinearLayout
            android:id="@+id/ll_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_weight="1"
                android:text="@string/txt_alarm_message"
                android:textColor="@color/color_F53213"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_device_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00km/h"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_alarm_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_alarm"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="@string/txt_address"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_13" />

        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_p1"
            android:layout_below="@+id/tv_alarm_address"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@color/color_E5E5E5" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_2"
            android:padding="@dimen/dp_10"
            android:text="@string/txt_detail"
            android:textColor="@color/color_2769C9"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

</LinearLayout>