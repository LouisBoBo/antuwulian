<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/txt_name"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_device_imei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@+id/tv_device_name"
            android:layout_marginStart="@dimen/dp_5"
            android:text="IMEI:"
            android:gravity="center"
            android:textColor="@color/color_FA6A50"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_device_state"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:gravity="center_vertical|right"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:textColor="@color/color_666666"
            android:text="@string/txt_state_line_on"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_divider_p1"
        android:layout_below="@+id/tv_device_imei"
        android:background="@color/color_E5E5E5"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        />
</LinearLayout>