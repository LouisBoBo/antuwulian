<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F4F4F4"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_12"
        android:text="@string/txt_function_location_mode"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_12"
        android:text="@string/txt_location_priority"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15" />

    <RelativeLayout
        android:id="@+id/rl_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF">

        <TextView
            android:id="@+id/tv_name_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/txt_wifi_priority"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_des_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_wifi"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_toStartOf="@+id/iv_select_wifi"
            android:text="@string/txt_wifi_priority_des"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/iv_select_wifi"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_12"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_unselect_big" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_des_wifi"
            android:background="@color/color_E5E5E5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_gps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF">

        <TextView
            android:id="@+id/tv_name_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/txt_gps_priority"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_gps"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_toStartOf="@+id/iv_select_gps"
            android:text="@string/txt_gps_priority_des"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/iv_select_gps"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_12"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_unselect_big" />

    </RelativeLayout>

</LinearLayout>