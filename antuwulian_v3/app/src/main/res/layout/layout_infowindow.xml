<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_250"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ffffff_10"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_marker_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_location_gps"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333" />

        <TextView
            android:id="@+id/tv_marker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:visibility="visible"
            android:textColor="@color/color_333333"
            tools:text="名称:wave"/>

        <TextView
            android:id="@+id/tv_marker_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:visibility="visible"
            android:textColor="@color/color_333333"
            tools:text="打点时间:2019-01-01 18:20:20"/>

        <TextView
            android:id="@+id/tv_marker_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            tools:text="开始时间:2019-01-01 18:20:20"/>

        <TextView
            android:id="@+id/tv_marker_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            tools:text="结束时间:2019-01-01 18:20:20"/>

        <TextView
            android:id="@+id/tv_marker_parking_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            tools:text="停留时长:1小时10分"/>

        <TextView
            android:id="@+id/tv_marker_parking_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            tools:text="分段里程:11km"/>

        <TextView
            android:id="@+id/tv_marker_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:text="@string/txt_speed"/>

        <TextView
            android:id="@+id/tv_marker_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:text="@string/txt_address"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_15"
        android:layout_gravity="center"
        android:layout_marginTop="-3dp"
        android:src="@drawable/icon_arrow_down" />

</LinearLayout>