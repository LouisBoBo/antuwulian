<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ffffff_5"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/bg_2e7bec_5_top"
        android:gravity="center"
        android:text="@string/txt_time_select"
        android:textColor="@color/color_FFFFFF"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/txt_start"
                    android:textColor="@color/color_2E7BEC" />

                <TextView
                    android:id="@+id/id_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_20"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:text="12：00"
                    android:textColor="@color/color_2E7BEC" />
            </LinearLayout>

            <TimePicker
                android:id="@+id/id_start"
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_150"
                android:timePickerMode="spinner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center"
                    android:text="@string/txt_end"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_2E7BEC" />

                <TextView
                    android:id="@+id/id_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_20"
                    android:gravity="center"
                    android:text="12：00"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_2E7BEC" />
            </LinearLayout>

            <TimePicker
                android:id="@+id/id_end"
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_150"
                android:timePickerMode="spinner" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_cancel"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/bg_2e7bec_5"
            android:gravity="center"
            android:text="@string/txt_cancel"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/id_confirm"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_32"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@drawable/bg_2e7bec_5"
            android:gravity="center"
            android:text="@string/txt_confirm"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>