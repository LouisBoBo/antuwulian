<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginEnd="@dimen/dp_17"
        android:background="@drawable/bg_ffffff_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="@string/txt_merge_account"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="@string/txt_mobile"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_E5E5E5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/edt_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="@string/txt_input_code"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_00b4b7_12"
                android:gravity="center"
                android:text="@string/txt_get_code"
                android:textColor="@color/color_2E7BEC"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_E5E5E5"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_31"
            android:layout_margin="@dimen/dp_30">

            <Button
                android:id="@+id/btn_no_more_reminders"
                android:layout_width="@dimen/dp_95"
                android:layout_height="match_parent"
                android:background="@drawable/bg_ffffff_2_3"
                android:gravity="center"
                android:text="@string/txt_no_more_reminders"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/btn_merge"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_00b4b7_4"
                android:gravity="center"
                android:text="@string/txt_merge"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_33"
        android:layout_height="@dimen/dp_33"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dp_5"
        android:src="@drawable/icon_close_round_shape" />

</RelativeLayout>