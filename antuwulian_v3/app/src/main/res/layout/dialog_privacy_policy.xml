<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_ffffff_7"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/txt_privacy_policy_title"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/txt_privacy_policy"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/txt_privacy_location"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/txt_privacy_location_hint"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/txt_privacy_state"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/txt_privacy_state_hint"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/txt_privacy_store"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/txt_privacy_store_hint"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/txt_privacy_photo"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/txt_privacy_photo_hint"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/txt_privacy_policy_2"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_divider_p1"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/color_E5E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_nonuse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/txt_nonuse"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="@dimen/app_divider_p1"
            android:layout_height="match_parent"
            android:background="@color/color_E5E5E5" />

        <Button
            android:id="@+id/btn_agree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/txt_agree"
            android:textColor="@color/color_2E7BEC"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>