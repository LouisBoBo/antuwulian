<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_f4f4f4_6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/txt_edit_group_name"/>

    <EditText
        android:id="@+id/edt_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/bg_ffffff_6_2"
        android:layout_margin="@dimen/dp_20"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:singleLine="true"
        android:hint="@string/txt_group_name_input"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_E5E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="@string/txt_cancel"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_E5E5E5"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_2E7BEC"
            android:gravity="center"
            android:text="@string/txt_confirm"/>
    </LinearLayout>

</LinearLayout>