<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    android:background="@drawable/bg_ffffff_10">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_333333"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/txt_customize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_10">

        <EditText
            android:id="@+id/edt_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:background="@drawable/bg_e5e5e5_5_f7f7f7"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333333"
            android:maxLength="4"
            android:inputType="number"/>

        <TextView
            android:id="@+id/tv_min_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:layout_marginStart="@dimen/dp_5"
            android:text="@string/txt_minute_two"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_customize_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/color_FF4545"
        android:text="@string/txt_customize_hint"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/color_E5E5E5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/bg_ffffff_cacaca_3"
            android:gravity="center"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_666666"
            android:text="@string/txt_cancel"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/bg_2e7bec_5"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_30"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_FFFFFF"
            android:text="@string/txt_confirm"/>
    </LinearLayout>

</LinearLayout>